@model OMMIPL.Models.Home

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<div class="mail" id="mail">
    <div class="container">
        <div class="w3_mail_grids">
            @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "form1" }))
            {
                <div class="row">
                    <p style="color:red;">
                        @TempData["Msg"]
                    </p><br /><br />
                    <div class="col-md-4 w3_agile_mail_grid">
                        <label>LoginId</label>
                        @Html.TextBoxFor(m => m.LoginId, new { @class = "input__field", @placeholder = "LoginId"})
                    </div>
                    <div class="col-md-4 w3_agile_mail_grid">
                        <input type="submit" id="btnsave" value="Sign In" style="margin-top:25px;" onclick="return ValidateForm();">
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    function ValidateForm() {
        debugger;
        $(".errortext").removeClass("errortext");
        if ($("#LoginId").val() == "") {
            $("#LoginId").addClass('errortext');
            $('#LoginId').focus();
            return false;
        }
    }
</script>
