@model OMMIPL.Models.Home

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<!-- breadcrumbs area start -->
<div class="breadcrumbs_aree breadcrumbs_bg mb-140" data-bgimg="../assets/img/bg/breadcrumbs-bg.png">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs_text text-center">
                    <h1>Forget Password</h1>
                    <ul class="d-flex justify-content-center">
                        <li><a href="index.html">Home </a></li>
                        <li> <span>//</span></li>
                        <li>  Forget Password</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs area end -->
<!-- page wrapper start -->
<div class="page_wrapper">

    <!-- contact section start -->
    <section class="contact_page_section mb-140">
        @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "form1" }))
            {
            <div class="container">
                <p style="color:red;">
                    @TempData["Msg"]
                </p>
                <div class="row justify-content-between align-items-center mb-n50">
                    <div class="col-lg-6 col-md-8 col-12 mx-auto mb-50">
                        <img width="550" height="550" src="~/assets/img/others/about-thumb.jpg" alt="">
                    </div>
                    <div class="col-lg-5 col-md-8 col-12 mx-auto mb-50">
                        <div class="section_title text-center mb-60">
                            <h2>Login</h2>
                        </div>
                        <div class="form_input">
                           @Html.TextBoxFor(m => m.LoginId, new { @class = "input__field", @placeholder = "LoginId" })
                        </div>
                        <div class="form_input_btn text-center mb-40">
                            <button type="submit" id="btnsave" class="btn btn-link">Submit<img width="20" height="20" onclick="return ValidateForm();" src="~/assets/img/icon/arrrow-icon.jpg" alt=""></button>
                           
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
    <!-- contact section end -->

</div>
<!-- page wrapper end -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    function ValidateForm() {
        debugger;
        $(".errortext").removeClass("errortext");
        if ($("#LoginId").val() == "") {
            $("#LoginId").addClass('errortext');
            $('#LoginId').focus();
            return false;
        }
    }
</script>
